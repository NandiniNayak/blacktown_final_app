<%= simple_form_for(@exam) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sub_name %>
    <%= f.input :grade %>
    <%= f.input :start_date %>
    <%= f.input :start_time %>
    <%= f.input :image %>
    <%= f.input :description %>
    <%= f.association :year_group %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
