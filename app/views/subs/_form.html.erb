<%= simple_form_for(@sub) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <!--<%= f.association :year_group %>-->
    <%= f.input :year_group_id, input_html: { value: params[:year_group]}, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
